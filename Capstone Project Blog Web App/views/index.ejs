<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Blog</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="header">
    <h1>My Blog</h1>
    <a href="/new" class="new-post-btn">+ New Post</a>
  </div>

  <div class="container">
    <% if (posts.length === 0) { %>
      <div class="no-posts">
        <p>No posts yet. Create your first post!</p>
      </div>
    <% } %>

    <% posts.forEach(function(post) { %>
      <div class="post-card">
        <h2><a href="/post/<%= post.id %>" class="post-link"><%= post.title %></a></h2>
        <p class="date"><%= post.date %></p>
        <p class="content"><%= post.content %></p>
        <div class="post-actions">
          <a href="/edit/<%= post.id %>" class="edit-btn">Edit</a>
          <a href="/delete/<%= post.id %>" class="delete-btn" onclick="return confirm('Are you sure you want to delete this post?')">Delete</a>
        </div>
      </div>
    <% }); %>
  </div>
</body>
</html>