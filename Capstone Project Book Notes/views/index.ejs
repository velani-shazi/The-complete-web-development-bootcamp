<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Book Notes</title>
    <link rel="stylesheet" href="/styles/main.css" />
</head>
<body>
    <div class="container">
        <header>
            <h1>üìö My Book Notes</h1>
            <p class="subtitle">A personal collection of books I've read and loved</p>

            <div class="stats">
                <span class="book-count">
                    Total Books: <%= totalBooks %>
                </span>
            </div>
        </header>

        <div class="action-bar">
            <a href="/new" class="btn btn-primary">+ Add New Book</a>

            <div class="sort-controls">
                <span class="sort-label">Sort by:</span>

                <a
                    href="/?sort=rating"
                    class="btn-sort <%= currentSort === 'rating' ? 'active' : '' %>"
                >
                    ‚≠ê Rating
                </a>

                <a
                    href="/?sort=date"
                    class="btn-sort <%= currentSort === 'date' ? 'active' : '' %>"
                >
                    üìÖ Date Read
                </a>

                <a
                    href="/?sort=title"
                    class="btn-sort <%= currentSort === 'title' ? 'active' : '' %>"
                >
                    üî§ Title
                </a>
            </div>
        </div>

        <% if (books.length === 0) { %>
            <div class="empty-state">
                <h2>No books yet!</h2>
                <p>Start adding books you've read to build your collection.</p>
                <a href="/new" class="btn btn-primary">Add Your First Book</a>
            </div>
        <% } else { %>
            <div class="books-grid">
                <% books.forEach(book => { %>
                    <div class="book-card">

                        <a href="/books/<%= book.id %>" class="book-link">
                            <div class="book-cover">
                                <% if (book.isbn) { %>
                                    <img
                                        src="<%= book.coverUrl %>"
                                        alt="<%= book.title %> cover"
                                    />
                                <% } else { %>
                                    <div class="no-cover">
                                        <span>üìñ</span>
                                        <p>No Cover</p>
                                    </div>
                                <% } %>
                            </div>

                            <div class="book-info">
                                <h3 class="book-title"><%= book.title %></h3>
                                <p class="book-author">by <%= book.author %></p>

                                <% if (book.rating) { %>
                                    <div class="rating">
                                        <% for (let i = 1; i <= 5; i++) { %>
                                            <span class="star <%= i <= book.rating ? 'filled' : '' %>">
                                                <%= i <= book.rating ? '‚òÖ' : '‚òÜ' %>
                                            </span>
                                        <% } %>
                                    </div>
                                <% } %>

                                <% if (book.notes) { %>
                                    <div class="notes-preview">
                                        <p>
                                            <%= book.notes.length > 150
                                                ? book.notes.substring(0, 150) + '...'
                                                : book.notes
                                            %>
                                        </p>
                                    </div>
                                <% } %>
                            </div>
                        </a>

                        <div class="book-actions">
                            <a href="/edit/<%= book.id %>" class="btn btn-edit">
                                Edit
                            </a>

                            <form
                                action="/books/<%= book.id %>/delete"
                                method="POST"
                            >
                                <button class="btn btn-delete">
                                    Delete
                                </button>
                            </form>
                        </div>

                    </div>
                <% }); %>
            </div>
        <% } %>

        <footer>
            <p>
                Built with ‚ù§Ô∏è for book lovers |
                Powered by
                <a href="https://openlibrary.org" target="_blank">
                    Open Library API
                </a>
            </p>
        </footer>
    </div>
</body>
</html>
